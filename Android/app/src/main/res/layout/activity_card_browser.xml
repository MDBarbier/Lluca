<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tm470.mb24853.projectlluca.CardBrowserActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="11"
    android:columnOrderPreserved="true">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardListListView"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_rowSpan="8" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to view card details, "
        android:id="@+id/textView"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:textColor="#ffff1d20"
        android:layout_row="1"
        android:layout_column="1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="long press to add to current deck:"
        android:id="@+id/textView1"
        android:textColor="#ffff1d20"
        android:textSize="16dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="5dp"
        android:layout_row="2"
        android:layout_column="1" />



</GridLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tm470.mb24853.projectlluca.EditHeroesInDeckActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/editDeckTextName"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long press to remove a card, tap to view card data"
        android:textColor="#ffff1d20"
        android:textSize="15dp"
        android:layout_marginBottom="5dp"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".95"
        android:id="@+id/cardsInDecklistView"
         />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight=".05"
        android:layout_height="wrap_content"
       >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add heroes"
            android:id="@+id/edit_deck_addcards"
            android:layout_weight="0.33"
            android:onClick="add_cards_to_deck"/>



    </LinearLayout>

</LinearLayout>
